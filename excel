import openpyxl
import pandas as pd

workbook = openpyxl.Workbook()
sheet = workbook.active
# Add data to the Excel sheet
data = [
    ["Accuracy score with TfidfTransformer", "Accuracy score with CountVectorizer", "t-statistic", "p-value"],
    [accurate_idf, accurate_count, t_statistic, p_value]
]
for row in data:
    sheet.append(row)
workbook.save("sheet.xlsx")
print("Excel file is created.")

